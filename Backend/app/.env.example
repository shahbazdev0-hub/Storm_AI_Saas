# .env.example - Template Configuration
ENVIRONMENT=development
DEBUG=true

# JWT
SECRET_KEY=your_secret_key_here_minimum_32_characters_long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=70

# Database
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/database
DATABASE_NAME=crm_platform

# CORS
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# OpenAI
OPENAI_API_KEY=sk-proj-your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=150

# Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Twilio
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# Redis
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_MAX_CONNECTIONS=20

# Email
EMAIL_HOST=smtp.office365.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_password
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_password
SMTP_TLS=true
EMAILS_FROM_EMAIL=your_email@example.com
EMAILS_FROM_NAME=Your Company
ENABLE_OPENAI=1

# Google OAuth
GOOGLE_CLIENT_ID=your_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback

# OpenStreetMap
OPENSTREETMAP_CLIENT_ID=your_osm_client_id
OPENSTREETMAP_CLIENT_SECRET=your_osm_secret
OPENSTREETMAP_REDIRECT_URI=https://app.example.com

# Integrations
ENABLE_INTEGRATIONS=true
ENCRYPTION_KEY=your_32_char_key

QUICKBOOKS_CLIENT_ID=your_quickbooks_id
QUICKBOOKS_CLIENT_SECRET=your_quickbooks_secret
QUICKBOOKS_SANDBOX=true

GOOGLE_MAPS_API_KEY=your_maps_key
MAILCHIMP_API_KEY=your_mailchimp_key
MAILCHIMP_SERVER_PREFIX=us1
SENDGRID_API_KEY=your_sendgrid_key

WEBHOOK_BASE_URL=https://your-domain.com/api/v1/webhooks
WEBHOOK_VERIFY_SSL=true
WEBHOOK_TIMEOUT_SECONDS=30
